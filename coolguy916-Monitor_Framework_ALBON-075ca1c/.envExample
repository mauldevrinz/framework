# -----------------------------------------------------------------
# DATABASE SWITCH
# -----------------------------------------------------------------
# Set this to 'true' to use Firebase, or 'false' to use MySQL.
# The 'npm run switch-db' command will automatically change this value.
USE_FIREBASE=false

# -----------------------------------------------------------------
# FIREBASE DATABASE CONFIGURATION
# -----------------------------------------------------------------
# These values are used only when USE_FIREBASE is set to 'true'.
# The default values are shown after the || in main.js
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_DATABASE_URL=https://your-database-url.firebaseio.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-storage-bucket
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_MEASUREMENT_ID=your-measurement-id

# -----------------------------------------------------------------
# MYSQL DATABASE CONFIGURATION
# -----------------------------------------------------------------
# These values are used only when USE_FIREBASE is set to 'false'.
# The default values are shown after the || in main.js
MYSQL_HOST=
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_DATABASE=
MYSQL_PORT=

# -----------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------
# Port for the external Express API server.
API_PORT=

# -----------------------------------------------------------------
# WS CONFIGURATION
# -----------------------------------------------------------------
# WebSocket server configuration.
# This is used for real-time data updates.  
WS_PORT=8080
WS_HOST=0.0.0.0
WS_AUTH_ENABLED=false
WS_AUTH_TOKEN=your_websocket_auth_token_here
WS_DB_TABLE=sensors_data
WS_REQUIRED_FIELDS=
WS_ENCRYPT_FIELDS=
WS_HEARTBEAT_ENABLED=true
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=10
WS_LOG_LEVEL=info

# -----------------------------------------------------------------
# SERIAL CONFIGURATION
# -----------------------------------------------------------------
# Serial port configuration for reading data from sensors.
# These values are used for the serial connection.
SERIAL_PORT= null
SERIAL_BAUDRATE= 9600
SERIAL_LINE_DELIMITER='\r\n'
SERIAL_DATA_TYPES= 
SERIAL_DB_TABLE_NAME= 
SERIAL_REQUIRED_FIELDS= []
SERIAL_FIELD_TO_ENCRYPT= []

# -----------------------------------------------------------------
# FIREBASE CONFIGURATION (For Best Practices)
# -----------------------------------------------------------------
DB_ENCRYPTION_KEY=7KZRHrMDBKedjuNKDefaultKey
